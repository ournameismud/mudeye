{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("ournameismud\\mudeye\\assetbundles\\mudeyefieldfield\\MudEyeFieldFieldAsset") %}

{% if  field.metaTitle %}
	{{ forms.textField({
	    label: 'Meta Title',
	    id: id ~ 'seoTitle',
	    class: 'nicetext',
	    name: name ~ '[seoTitle]',
	    value: value.seoTitle is defined and value.seoTitle|length ? value.seoTitle,
	    required: false,
	}) }}
{% endif %}

{% if  field.metaDesc %}
	{{ forms.textareaField({
	    label: 'Meta Description',
	    id: id ~ 'seoDesc',
	    class: 'nicetext',
	    name: name ~ '[seoDesc]',
	    value: value.seoDesc is defined and value.seoDesc|length ? value.seoDesc,
	    required: false,
	}) }}
{% endif %}

{% if  field.metaRobots %}
	{{ forms.checkboxField({
	    label: 'Disable page in robots.txt',
	    id: id ~ 'seoRobot',
	    class: 'nicetext',
	    name: name ~ '[seoRobot]',
	    value: 1,
	    checked: value.seoRobot is defined and value.seoRobot|length ? true: false,
	    required: false,
	}) }}
{% endif %}